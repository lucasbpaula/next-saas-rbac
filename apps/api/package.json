{
  "name": "@sass/api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "pnpm run env:load tsx watch src/http/server.ts",
    "db:migrate": "pnpm run env:load npx prisma migrate dev",
    "db:studio": "pnpm run env:load npx prisma studio",
    "db:seed": "pnpm run env:load npx prisma db seed",
    "env:load": "dotenv -e ../../.env --",
    "build": "tsup",
    "start": "node dist/http/server.js"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^4.1.0",
    "@prisma/client": "^5.18.0",
    "@saas/env": "*",
    "@sass/auth": "*",
    "bcryptjs": "^2.4.3",
    "fastify": "^4.28.1",
    "fastify-plugin": "^4.5.1",
    "fastify-type-provider-zod": "^2.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@saas/eslint-config": "*",
    "@saas/prettier": "*",
    "@saas/tsconfig": "*",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.4.1",
    "dotenv-cli": "^7.4.2",
    "prisma": "^5.18.0",
    "tsup": "^8.3.0",
    "tsx": "^4.17.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "eslintConfig": {
    "extends": [
      "@saas/eslint-config/node"
    ]
  },
  "prettier": "@saas/prettier"
}
